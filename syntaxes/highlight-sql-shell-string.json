{
    "fileTypes": [
        ".sh"
    ],
    "injectionSelector": "L:string.quoted.double.shell, L:string.quoted.single.shell",
    "patterns": [
        {
            "begin": "(--sql)",
            "end": "(;)",
            "captures": {
                "1": {
                    "name": "variable.parameter"
                }
            },
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "( *--beginsql| *--begin-sql)",
            "end": "( *--endsql| *--end-sql)",
            "captures": {
                "1": {
                    "name": "variable.parameter"
                }
            },
            "patterns": [
                {
                    "match": "(;)",
                    "captures": {
                        "1": {
                            "name": "keyword.operator"
                        }
                    }
                },
                {
                    "include": "source.sql"
                }
            ]
        }
    ],
    "scopeName": "shell-sql.injection"
}